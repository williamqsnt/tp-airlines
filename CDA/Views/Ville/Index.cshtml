@model IEnumerable<CDA.Models.Ville>

@{
    ViewData["Title"] = "Villes Index";
}

<h1>Villes</h1>

<p>
    <a asp-action="Create">Create New Ville</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVille">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVille">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVille">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

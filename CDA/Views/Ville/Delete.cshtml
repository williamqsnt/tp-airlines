@model CDA.Models.Ville

@{
    ViewData["Title"] = "Delete Ville";
}

<h1>Delete Ville</h1>
<h3>Are you sure you want to delete this ville?</h3>

<div>
    <h4>Ville</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
